{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2015",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["chrome"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": [
    "popup.ts",
    "content.ts",
    "src/types/**/*"
  ]
} 